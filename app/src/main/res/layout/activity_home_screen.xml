<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dnk.fallingmyo.HomeScreenActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="40dp">
        <View
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_width="0dp"></View>
        <ImageButton
            android:id="@+id/callButton"
            android:layout_weight="0.5"
            android:background="@drawable/call"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_width="0dp"></View>

    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageButton
            android:id="@+id/meds"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:background="@drawable/meds"
            android:onClick="clickedMeds"
            />
        <ImageButton
            android:id="@+id/food"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/meals"
            android:onClick="clickedFood"
            />
        <ImageButton
            android:id="@+id/washroom"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_gravity="left"
            android:background="@drawable/toilet"
            android:onClick="clickedWashroom"
            />
        <ImageButton
            android:id="@+id/linens"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:onClick="clickedLinens"
            android:background="@drawable/linens"
            />
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="25dp">
        <View
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:layout_width="0dp"></View>
        <ImageButton
            android:id="@+id/helpButton"
            android:layout_weight="0.7"
            android:background="@drawable/emergency"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="clickedHelp"/>
        <View
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:layout_width="0dp"></View>
    </LinearLayout>
</LinearLayout>